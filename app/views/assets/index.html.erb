<h1>Listing Assets</h1>

<table>
  <tr>

    <th>Attachable</th>

    <th>Data file name</th>

  </tr>
  <%- @assets.each do |asset|%>
    <tr>

      <td><%=h asset.attachable %></td>

      <td><%=h asset.data_file_name %></td>

       <td><h3><%= link_to h(asset.attachable), project_asset_comments_path(@project, asset) %></h3></td>    

      <td><%=link_to 'Show', [@project, asset]  %></td>
      <td><%=link_to 'Edit', edit_project_asset_path(@project, asset) %></td>
      <td><%=link_to 'Destroy', [@project,asset], :confirm => 'Are you sure?', :method => :delete %></td>
    

    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Asset', new_project_asset_path %>