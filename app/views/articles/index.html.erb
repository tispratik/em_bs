<h1>Listing Articles</h1>

<table>
  <tr>

    <th>Project</th>

    <th>Title</th>

  </tr>
  <%- @articles.each do |article|%>
    <tr>
  
       <td><h3><%=  h(article.title)  %></h3></td>
      
      <td><%=link_to 'Show', [@project, article]  %></td>
      <td><%=link_to 'Edit', edit_project_article_path(@project, article) %></td>
      <td><%=link_to 'Destroy', [@project,article], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Article', new_project_article_path %>